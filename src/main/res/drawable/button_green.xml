<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#dd37ae6e"
                    />
            <corners
                    android:radius="3dip"
                    />
            <stroke
                    android:color="#afffbc"
                    android:width="3dp"
                    />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                    android:color="#dd35ae4e"
                    />
            <corners
                    android:radius="3dip"
                    />
        </shape>
    </item>
</selector>