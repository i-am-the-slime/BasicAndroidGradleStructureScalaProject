<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#551d1d1d"
                    />
            <corners
                    android:radius="20dip"
                    />
            <stroke
                android:color="#ff00a8e0"
                android:width="1dp"
            />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#0000afff"
            />
            <corners
                android:radius="20dip"
            />
            <stroke
                android:color="#ff00a8e0"
                android:width="1dp"
            />
        </shape>
    </item>
</selector>