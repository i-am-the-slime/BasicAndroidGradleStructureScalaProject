<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid
					android:color="@color/arya"
					/>
			<corners
					android:radius="3dip"
					/>
			<stroke
					android:color="@color/arya_light"
					android:width="3dp"
					/>
		</shape>
	</item>
	<item>
		<shape>
			<stroke
					android:color="@color/arya"
                    android:width="1dp"
					/>
            <solid
                android:color="@android:color/transparent"
                    />
			<corners
					android:radius="3dip"
					/>
		</shape>
	</item>
</selector>