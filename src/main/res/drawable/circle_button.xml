<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid
                    android:color="#AAf0f0ff"
                    />
            <stroke
                    android:color="#e2e3da"
                    android:width="1dp"
                    />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid
                    android:color="#01e2e3da"
                    />
            <stroke
                    android:color="@color/arya"
                    android:width="1dp"
                    />
        </shape>
    </item>
</selector>