<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#ff00a8e0"
                    />
            <corners
                    android:radius="3dip"
                    />
            <stroke
                    android:color="#ff72c7f4"
                    android:width="3dp"
                    />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                    android:color="#ff00a8e0"
                    />
            <corners
                    android:radius="3dip"
                    />
        </shape>
    </item>
</selector>