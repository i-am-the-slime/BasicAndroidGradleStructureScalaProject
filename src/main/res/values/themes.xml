<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Theme.Arya.NoActionBar" parent="@style/Theme.AppCompat">
    <item name="colorPrimary">@color/arya</item>
    <item name="colorPrimaryDark">@color/arya_dark</item>
    <item name="colorAccent">@color/arya_light</item>
    <item name="windowActionBar">false</item>
    <item name="windowActionBarOverlay">true</item>
    <item name="android:windowActionBarOverlay">true</item>

    <item name="android:editTextStyle">@style/AryaEditTextStyle</item>
  </style>

  <style name ="SlideWindowAnimation">
    <item name="android:windowEnterAnimation">@anim/nothing</item>
    <item name="android:windowExitAnimation">@anim/nothing</item>
  </style>

  <style name="AryaActionBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <!--<item name="android:dropDownListViewStyle">@style/dropdownlistview</item>-->
    <!--<item name="android:titleTextStyle">@style/AryaThemeTitleTextStyle</item>-->
    <item name="android:windowActionBarOverlay">true</item>
    <item name="windowActionBarOverlay">true</item>
  </style>

  <style name="AryaToolbarStyle">
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="windowActionBarOverlay">true</item>
  </style>

  <style name="Arya.Widget.TextView" parent="android:Widget.Holo.TextView">
    <item name="fontPath">fonts/osreg.ttf</item>
  </style>


  <style name="AryaEditTextStyle" parent="@style/Widget.AppCompat.EditText">
  <item name="android:layout_width">fill_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:textSize">20sp</item>
  <item name="android:paddingTop">6dip</item>
  <item name="android:paddingBottom">8dip</item>
  <item name="android:paddingLeft">7dip</item>
  <item name="android:paddingRight">7dip</item>
  <item name="android:textColor">@color/black</item>
  <item name="android:textColorHint">@color/hint_grey</item>
  <item name="android:background">@drawable/edit_text</item>
  </style>
</resources>