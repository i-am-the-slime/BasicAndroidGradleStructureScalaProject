<?xml version="1.0" encoding="utf-8"?>

<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:arya="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dip"
    android:paddingBottom="16dip"
    arya:rippleOverlay="false"
    arya:rippleColor="@color/arya_light"
    arya:rippleAlpha="0.1"
    arya:rippleHover="true"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <TextView
      android:id="@+id/menu_entry_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_alignParentLeft="true"
      android:text="c"
      android:textColor="@color/black"
      fontPath="fonts/stroke.otf"
      />
  <TextView
      android:id="@+id/menu_entry_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18dp"
      android:textColor="@color/black"
      android:layout_marginLeft="72dp"
      android:layout_alignParentLeft="true"
      />
</RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>
